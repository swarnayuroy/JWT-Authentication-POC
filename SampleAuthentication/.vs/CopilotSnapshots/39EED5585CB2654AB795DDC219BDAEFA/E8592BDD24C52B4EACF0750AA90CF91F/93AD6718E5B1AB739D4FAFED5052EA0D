using DataContext.DataProvider;
using DataContext.DataService;
using DataContext.Models;
using System;
using System.Collections.Generic;
using System.Linq;
using System.Threading.Tasks;
using System.Web;
using web.Service.DTO;

namespace web.Service.DataLayer
{
    public class Data
    {
        private IEnumerable<UserDetail> _user;
        private IEnumerable<UserAccountDetail> _usersAccount;

        public IEnumerable<UserDetail> User
        {
            get
            {
                return _user;
            }

            set
            {
                if (value.Count() > 0)
                {
                    _user = value;
                }
            }
        }
        public IEnumerable<UserAccountDetail> AccountDetail
        {
            get
            {
                return _usersAccount;
            }

            set
            {
                if (value.Count() > 0)
                {
                    _usersAccount = value;
                }
            }
        }
    }
    public class DataService<T> : IService<T> where T : class
    {
        private readonly IDataProvider _dataProvider;
        private readonly IDataService _dataService;
        public DataService(IDataProvider dataProvider, IDataService dataService)
        {
            this._dataProvider = dataProvider;
            this._dataService = dataService;
        }

        public Task<IEnumerable<T>> Get()
        {
            var dataContext = new Data();
            if (typeof(T) == typeof(UserDetail))
            {
                dataContext.User = _dataProvider.User.Select(u => new UserDetail
                {
                    Id = u.Id.ToString(),
                    Name = u.Name,
                    Email = u.Email,
                    IsVerified = u.IsVerfied ?? false
                });
                return Task.FromResult(dataContext.User as IEnumerable<T>);
            }
            else if (typeof(T) == typeof(UserAccountDetail))
            {
                dataContext.AccountDetail = _dataProvider.Account.Select(a => new UserAccountDetail
                {
                    Id = a.Id,
                    UserId = a.UserId,
                    Password = a.Password,
                    CreatedAt = a.CreatedAt,
                    LoggedInAt = a.LoggedInAt
                });
                return Task.FromResult(dataContext.AccountDetail as IEnumerable<T>);
            }
            
            throw new NotSupportedException($"Type {typeof(T).Name} is not supported type");
        }

        public async Task<bool> Save(T entity)
        {
            try
            {
                if (typeof(T) == typeof(UserDetail))
                {
                    var userDetail = entity as UserDetail;
                    if (userDetail == null)
                    {
                        return false;
                    }

                    // Convert DTO to Domain Model
                    var user = new User
                    {
                        Id = Guid.Parse(userDetail.Id),
                        Name = userDetail.Name,
                        Email = userDetail.Email,
                        IsVerfied = userDetail.IsVerified
                    };

                    await _dataService.SaveUserAsync(user);
                    return true;
                }
                else if (typeof(T) == typeof(UserAccountDetail))
                {
                    var accountDetail = entity as UserAccountDetail;
                    if (accountDetail == null)
                    {
                        return false;
                    }

                    // Convert DTO to Domain Model
                    var account = new Account
                    {
                        Id = accountDetail.Id,
                        UserId = accountDetail.UserId,
                        Password = accountDetail.Password,
                        CreatedAt = accountDetail.CreatedAt,
                        LoggedInAt = accountDetail.LoggedInAt
                    };

                    await _dataService.SaveAccountAsync(account);
                    return true;
                }

                throw new NotSupportedException($"Type {typeof(T).Name} is not supported type");
            }
            catch (Exception)
            {
                return false;
            }
        }
    }
}